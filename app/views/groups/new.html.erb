<div class="categorie__container">
  <%= form_for @categorie, url: groups_path do |f| %>

    <h1 class="categorie__title">Add Categorie</h1>
    <div class="categorie__body">
      <div class="form-group">
        <%= f.label :name, class: "form-label" %><br/>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group ">
        <%= f.label :icon, class: "form-label" %><br/>
        <%= f.text_field :icon, autocomplete: "icon", class: "form-control" %>
      </div>
    </div>

    <div class="categorie__footer">
      <%= f.submit "Add new category", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>